<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=<device-width>, initial-scale=1.0" />
    <title>Schedule website</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <%- include('../partials/header') %>

    <main>
      <br />
      <h1>Welcome to Schedule App</h1>
      <section>
        <!-- filter section -->

        <form id="tableForm" method="GET" action="/getJson">
          <label name="Select User">Select User</label>
          <select class="selectpicker" data-style="btn-info" name="selectpicker">
                <option name="table1" value="0">Select All</option>
                <% for (let i = 0; i < usersAll.length; i++) { %>
                  <option name="table1" value="<%= usersAll[i].id %>"><%= usersAll[i].firstname %></option>
                  <% } %>
          </select>
          <input type="submit" />
      </form>
      </section>
      <section>
        <!-- user -->
        <table>
          <thead>
              <th>First Name</th>
              <th>Last Name</th>
              <th>Email</th>
              <th>Password</th>
            </tr>
          </thead>
          <tbody>
            <% 
            for (let i = 0; i < users.length; i++) { %>
              <tr>
                <td><%= users[i].firstname %></td>
                <td><%= users[i].lastname %></td>
                <td><%= users[i].email %></td>
                <td><%= users[i].password %></td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </section>
      <section>
     <!-- schedules -->

     <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Day</th>
          <th>Start at</th>
          <th>End at</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < schedules.length; i++) { %>
        <tr>
          <td><%= schedules[i].username %></td>
          <td><%= schedules[i].day %></td>
          <td><%= schedules[i].start_time %></td>
          <td><%= schedules[i].end_time %></td>
        </tr>
        <% } %>
      </tbody>
    </table>
      </section>
    </main>
  </body>
</html>
