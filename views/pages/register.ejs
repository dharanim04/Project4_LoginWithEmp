<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- <link type="text/css" rel="stylesheet" href="/materialize.min.css" />
    <link rel="stylesheet" href="/style.css" /> -->
    <%- include('../partials/linkCss') %>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const elems = document.querySelectorAll(".collapsible");
        const options = { accordion: true };
        const instances = M.Collapsible.init(elems, options);
      });
    </script>
    <title>Document</title>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper blue lighten-1">
        <a href="#" class="Mrlogo left"> </a>
        <a href="#" class="brand-logo center">Schedule App</a>
      </div>
    </nav>
    <div class="row" style="margin: 2em">
      <div class="col s8"></div>
      <ul class="collapsible col s4">
        <li class="active">
          <div class="collapsible-header">
            <i class="material-icons">login</i>

            Login Here
          </div>
          <div class="collapsible-body">
            <form method="post" action="/home/login" class="">
              <div class="row">
                <div class="input-field">
                  <label for="email">Email:</label>
                  <input id="email" type="email" name="email" required />
                </div>
              </div>
              <div class="row">
                <div class="input-field">
                  <label for="password">Password:</label>
                  <input
                    id="password"
                    type="password"
                    name="password"
                    required
                  />
                </div>
              </div>
              <div class="row">
                <button class="btn waves-effect light-blue" type="submit">
                  Login
                </button>
              </div>
            </form>
          </div>
        </li>
        <li>
          <div class="collapsible-header">
            <i class="material-icons">how_to_reg</i>
            Register
          </div>
          <div class="collapsible-body">
            <form method="POST" action="/" class="">
              <div class="input-field">
                <label for="firstname">First Name:</label>
                <input id="firstname" type="text" name="firstname" required />
              </div>
              <div class="input-field">
                <label for="lastname">Last Name:</label>
                <input id="lastname" type="text" name="lastname" required />
              </div>
              <div class="input-field">
                <label for="email">Email:</label>
                <input id="email" type="email" name="email" required />
              </div>

              <div class="input-field">
                <label for="password">Password:</label>
                <input id="password" type="password" name="password" required />
              </div>

              <div class="input-field">
                <label for="confirmPassword">Confirm Password:</label>
                <input
                  id="confirmPassword"
                  type="password"
                  name="confirmPassword"
                  required
                />
              </div>
              <div class="input-field">
                <button class="btn waves-effect light-blue" type="submit">
                  Sign Up
                </button>
              </div>
              <!-- <a href="users/login">Already Register SignIN here</a> -->
            </form>
          </div>
        </li>
      </ul>
    </div>

    <!-- end of the body include js  -->
    <%- include('../partials/footer') %> <%- include('../partials/linkJS') %>
    <!-- Compiled and minified JavaScript -->
    <!-- <script defer src="/materialize.min.js"></script> -->
  </body>
</html>
